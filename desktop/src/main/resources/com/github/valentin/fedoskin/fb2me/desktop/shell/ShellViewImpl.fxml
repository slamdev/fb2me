<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.valentin.fedoskin.fb2me.desktop.shell.ShellViewImpl">
    <center>
        <Pane />
    </center>
    <top>
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem onAction="#openShelf" text="%shelf" />
                        <MenuItem onAction="#openReader" text="%reader" />
                        <MenuItem onAction="#close" text="Close" />
                    </items>
                </Menu>
                <Menu text="Tools">
                    <items>
                        <MenuItem onAction="#openOptions" text="%options" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <VBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label text="Status string text sample" />
                <ProgressIndicator fx:id="progressIndicator" />
            </children>
        </VBox>
    </bottom>
</BorderPane>